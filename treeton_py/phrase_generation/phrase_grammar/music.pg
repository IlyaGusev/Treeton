      lex: [придумать,сгенерировать,создать,сочинить,сгенерить]
    any_indecl:
      lex: 
        - для нового года
        - на новый год
    subject:
      gramm: [sing]
      lex: [ты]

creation_attr:
  root:
    extends: common.abstract_action
    gramm: ['past','part','pass']
    lex: [придумать,сгенерировать,создать,сочинить,сгенерить]
  any_indecl:
    lex: 
      - для нового года
      - на новый год
  instr:
    gramm: [sing]
    lex: [ты]

music_created_by_alice:
  onto:
    id: ny_alice_playlist
  reference: id
  content:
    - root:
        extends: common.abstract_object
        content:
          root: 
            - abstract_music_keyword
            - playlist_keyword
          attr_uniq_opt:
            gramm: [adj]
            lex: [новогодний]
      attr_uniq_opt:
        - creation_attr
        - lex: [свой, твой]
      relative:
        content:
          root:
            gramm: [acc]
            content: common.relative_word
          relative_clause: creation_active_clause
    - root: common.relative_pro
      relative_clause: creation_active_clause

special_music:
  onto:
    type: special_playlist
    id: {}
  tag: special_playlist
  content:
    - favorite_alice_music
    - ya_music_chart
    - music_created_by_alice

# именованные элементы (треки, альбомы, исполнители, плейлисты)

track_keyword:
  extends: common.abstract_named_object
  lex:
    - песня
    - трэк
    - трек
    - track
    - хит
    - hit
    - песенка
    - мелодия
    - композиция
    - произведение

track_name:
  onto:
    type: track
    name: {}
  tag: track
  lookup: name

track_indecl_name:
  onto:
    type: track
    name: {}
  content:
    root:
      extends: common.bracketed
    tag: track
    inner:
      lookup: name

track_mention:
  onto:
    type: track
    name: {}
  content:
    - track_name
    - root: 
        gramm: [sing]
        content: track_keyword
      name: track_indecl_name
      genetive: 
        reference: artist
        content: artist_mention
      within: 
        - reference: album
          content: album_mention
        - reference: playlist
          content: playlist_mention
      inside:
        - reference: album
          content: album_mention
        - reference: playlist
          content: playlist_mention
    - root:
        extends: common.conj
        content:
          - root: 
              gramm: [sing]
              content: track_keyword
            name: track_indecl_name
          - track_name
      conjunct:
        - reference: artist
          content: artist_mention
        - reference: album
          content: album_mention
        - reference: playlist
          content: playlist_mention

album_keyword:
  extends: common.abstract_named_object
