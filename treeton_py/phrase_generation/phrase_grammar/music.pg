artist_keyword:
  extends: common.abstract_named_object
  gramm: [sing]
  content:
    - lex:
      - группа
      - группировка
      - исполнитель
      - бэнд
      - band
      - команда
      - ВИА
      - коллектив
      - ансамбль
    - root:
        extends: common.abstract_object
        gramm: [sing]
        lex: коллектив
      attr_oblig:
        lex: музыкальный

artist_name:
  onto:
    type: artist
    name: {}
  tag: artist
  lookup: name

artist_indecl_name:
  onto:
    type: artist
    name: {}
  content:
    root:
      extends: common.bracketed
    tag: artist
    inner:
      lookup: name

artist_mention:
  onto:
    type: artist
    name: {}
  content:
    - root: artist_keyword
      name: artist_indecl_name
    - artist_name

playlist_keyword:
  extends: common.abstract_named_object
  gramm: [sing]
  content:
    - lex:
      - плейлист
      - подборка
      - треклист
    - root:
        extends: common.abstract_object
        gramm: [sing]
        lex: [список, набор]
      genetive_oblig:
        gramm: [plur]
        content: track_keyword

playlist_name:
  onto:
    type: playlist
    name: {}
  content:
    root:
      extends: common.bracketed
    tag: playlist
    inner:
      lookup: name

playlist_mention:
  onto:
    type: playlist
    name: {}
  root: playlist_keyword
  name:
    - playlist_name

all_music:
  - abstract_music
  - album_mention
  - playlist_mention
  - artist_mention
  - track_mention

turn_music_on:
  onto:
    type: switch_on
    target: {}
  content:
    - root: common.infinitive_clause
      infinitive:
        onto:
          target: {}
        content:
          root: all_music_verbs
          object:
            reference: target
            content: all_music
    - root: common.imperative_clause
      imperative:
        onto:
          target: {}
        content:
          root: all_launch_verbs
          object:
            reference: target
            content: all_music
