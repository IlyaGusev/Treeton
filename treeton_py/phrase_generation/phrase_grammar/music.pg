# music verbs

music_action:
  extends: common.abstract_action
  tag: action_request

launch_imperf:
  extends: music_action
  lex:
    - запускать
    - играть
    - проигрывать
    - ставить
    - врубать
    - включать
    - воспроизводить

launch_perf:
  extends: music_action
  lex:
    - запустить
    - сыграть
    - проиграть
    - плей
    - play
    - поставить
    - врубить
    - включить
    - воспроизвести

listen_perf:
  extends: music_action
  lex:
    - услышать
    - прослушать

listen_imperf:
  extends: music_action
  lex:
    - слушать
    - прослушивать
    - слышать

all_launch_verbs:
  - launch_perf
  - launch_imperf

all_music_verbs:
  - launch_perf
  - launch_imperf
  - listen_perf
  - listen_imperf

# music objects

abstract_music_keyword:
  extends: common.abstract_object
  content:
    - gramm: [sing]
      lex:
        - музыка
        - музон
        - музяка
        - музло
        - песня
    - common.what_word
    - gramm: [plur]
      lex: [песня]


abstract_music:
  onto:
    type: collection
    proto:
      type: track
  content:
    root:
      reference: proto
      content:
        root:
          - abstract_music_keyword
          - genre
        purpose:
          - activity_purpose
          - mood_purpose
          - root:
              extends: common.abstract_named_object
              gramm: [sing]
              lex: [прослушивание,воспроизведение,проигрывание,игра,звучание]
            inside_oblig: activity_area
        attr:
          - activity_attr
          - epoch_attr
          - language_attr
          - mood_attr
        on_the:
          - language_language
        with:
          - language_words
        any_indecl: epoch_indecl
        inside_acc:
          gramm: [sing]
          content: activity_area
        inside:
          - root:
              extends: common.abstract_named_object
              gramm: [sing]
              lex: [жанр, стиль]
            name: genre
          - reference: album
            content: album_mention
          - reference: playlist
            content: playlist_mention
        indecl_genet: epoch_genet
        genetive:
          reference: artist
          content: artist_mention
        within:
          - reference: album
            content: album_mention
          - reference: playlist
            content: playlist_mention

# языки

language_attr:
  onto:
    language: {}
  root:
    tag: language
    reference: language
    content:
      - onto: russian
        lex: [родной,отечественный,русский,русскоязычный,наш]  
      - onto: foreign
        lex: [иностранный,западный]
      - onto: foreign
        root:
          extends: common.abstract_entity
          lex: [родной,русский,славянский,русскоязычный,наш]
        proclitic:
          lex: [не]


language_words:
  onto:
    language: {}
  root:
    extends: common.abstract_object
    content:
      - lex: [текст]
      - gramm: [plur]
        lex: [слово]  
      - gramm: [sing,fem]
        lex: [лирика]
  attr_uniq: language_attr

language_language:
  onto:
    language: {}
  root:
    extends: common.abstract_object
    gramm: [sing]
    lex: [язык]  
  attr_uniq: language_attr


# эпохи

epoch_indecl:
  onto:
    epoch: {}
  root:
    tag: epoch
    reference: epoch
    content:
      - onto: the-greatest-hits
        lex: [на все времена]  
      - onto: nineties
        lex: [времен перестройки]

epoch_attr:
  onto:
    epoch: {}
  root:
    tag: epoch
    reference: epoch
    content:
      - onto: the-greatest-hits
        lex: [вечный, золотой]  
      - onto: nineties
        lex: [перестроечный]

epoch_genet:
  onto:
    epoch: {}
  root:
    extends: common.abstract_object
    content:
      - lex: [годов,годков]
      - {}
  any_uniq_indecl:
    tag: epoch
    reference: epoch
    content:
      - onto: fifties
        lex: [50-х,пятидесятых,'50']
      - onto: sixties
        lex: [60-х,шестидесятых,'60']
      - onto: seventies
        lex: [70-х,семидесятых,'70']
      - onto: eighties
        lex: [80-х,восьмидесятых,'80']
      - onto: nineties
        lex: [90-х,девяностых,'90']
      - onto: zeroes
        lex: [нулевых]      

# жанры

genre:
  onto:
    genre: {}
  extends: common.abstract_object
  root:
    reference: genre
    gramm: [sing]
    tag: genre
    content:
      - onto: rock
        lex: [рок]
      - onto: jazz
        lex: [джаз]
      - onto: blues
        lex: [блюз]

# активности

heavy_transport:
  lex:
    - автомобиль
    - машина
    - транспорт
    - грузовик

transport:
  - heavy_transport
  - lex:
      - мотоцикл
      - байк
      - скутер

activity_attr:
  onto:
    activity: {}
  root:
    tag: activity
    reference: activity
    content:
      - onto: wake-up
        lex: [пробуждающий,вдохновляющий,бодрящий,мощный,сильный]
      - onto: driving
        lex: [автомобильный]
      - onto: beloved
        lex: [романтический,нежный,чувственный,любовный]
      - onto: fall-asleep
        lex: [сонный,успокаивающий,успокоительный,расслабляющий,расслабленный]
      - onto: work-background
        lex: [рабочий,фоновый,интерьерный,легкий]
      - onto: workout
        lex: [спортивный,велосипедный,беговой]
      - onto: party
        lex: [праздничный]
      - onto: sex
        lex: [сексуальный,эротичный,порно,порнографичный,порнографический,взрослый]
      - onto: road-trip
        lex: [дорожный,прогулочный]

activity_purpose:
  onto:
    activity: {}
  root:
    tag: activity
    reference: activity
    content:
      - gramm: [sing]
        content:
          - onto: wake-up
            lex: [пробуждение, бессоница]
          - onto: driving
            content:
              # автомобиль (в контекстах "музыка для автомобиля")
              - transport
              # просто вождение/езда
              - lex: [вождение, езда]
              # вождение машины
              - root:
                  extends: common.abstract_object
                  gramm: [sing]
                  lex: [вождение]
                genetive_uniq: transport
              # автомобильная езда
              - root:
                  extends: common.abstract_object
                  gramm: [sing]
                  lex: [езда]
                attr_uniq:
                  lex: [автомобильный]
              # езда на мотоцикле
              - root:
                  extends: common.abstract_object
                  gramm: [sing]
                  lex: [езда,перемещение]
                on_the: transport
              # вождение скутера
              - root:
                  extends: common.abstract_object
                  gramm: [sing]
                  lex: [вождение,езда]
                inside: transport
          - onto: fall-asleep
            lex: [сон,успокоение,покой,расслабление,расслабон,релакс]
          - onto: work-background
            lex: [работа]
          - onto: workout
            lex: [спорт,велосипед,кач,борцуха,бег,марафон]
          - onto: party
            lex: [пати]
          - onto: sex
            lex: [секс]
      - onto: road-trip
        lex: [путешествие, пикник]
      - onto: workout
        lex: [тренировка, покатушка, тренажерка, пробежка]
      - onto: party
        lex: [вечеринка,тусовка,пати]
      - onto: beloved
        content:
          - lex: свидание
          - root:
              extends: common.abstract_object
              lex: [встреча,свидание]
            attr_uniq:
              lex: [романтический,любовный]

activity_area:
  onto:
    activity: {}
  root:
    tag: activity
    reference: activity
    content:
      - onto: driving
        content: heavy_transport
      - onto: road-trip
        lex: [путешествие]

